<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.steamlink"
       name="steamlink"
       version="1.0"
       provider-name="mdPlusPlus">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.requests" version="2.22.0"/>
  </requires>
  <extension point="xbmc.python.script" library="addon.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Steam Link app for Raspberry Pi</summary>
    <description>
Installs the Steam Link app for Raspberry Pi 3 or newer from Valve for use in streaming from Steam clients. Addon is not associated with Valve. Steam and the Steam logo are trademarks and/or registered trademarks of Valve Corporation in the U.S. and/or other countries.
    </description>
    <disclaimer>
    </disclaimer>
    <platform>all</platform>
    <website></website> <!-- to be filled out -->
    <source></source> <!-- to be filled out -->
    <news>
100
- Initial release
    </news>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.jpg</fanart>
      <banner>resources/banner.png</banner>
      <clearlogo>resources/clearlogo.png</clearlogo>
      <screenshot>resources/screenshot.png</screenshot>
    </assets>
  </extension>
</addon>
